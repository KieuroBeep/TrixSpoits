-- Roblox Script: Pop-up

-- Services
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DiscordPopup"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

-- Create Frame (Pop-up)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 400, 0, 150)
frame.Position = UDim2.new(0.5, -200, -0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Parent = screenGui
frame.ClipsDescendants = true
frame.Rotation = -10

-- Stroke
local stroke = Instance.new("UIStroke")
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(255, 170, 0)
stroke.Parent = frame

-- Text
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, -20, 0.6, -10)
textLabel.Position = UDim2.new(0, 10, 0, 10)
textLabel.BackgroundTransparency = 1
textLabel.Text = "Oops this script has been Deleted by its owner\n"
textLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
textLabel.TextScaled = true
textLabel.Font = Enum.Font.GothamBold
textLabel.Parent = frame

-- Create ONLY the Ok button
local okButton = Instance.new("TextButton")
okButton.Size = UDim2.new(0.6, 0, 0.25, 0)
okButton.Position = UDim2.new(0.2, 0, 0.65, 0) -- centered
okButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
okButton.TextColor3 = Color3.fromRGB(255, 255, 255)
okButton.Text = "Ok"
okButton.Font = Enum.Font.GothamBold
okButton.TextScaled = true
okButton.Parent = frame

-- Popup animation
local tweenInfo = TweenInfo.new(1, Enum.EasingStyle.Bounce, Enum.EasingDirection.Out)
TweenService:Create(frame, tweenInfo, {Position = UDim2.new(0.5, -200, 0.3, 0), Rotation = 0}):Play()

-- Ok button function
okButton.MouseButton1Click:Connect(function()

    -- Hide first popup
    TweenService:Create(frame, TweenInfo.new(0.5), {Position = UDim2.new(0.5, -200, -0.5, -150)}):Play()
    wait(0.5)

    -- Confirmation popup
    local confirmFrame = frame:Clone()
    confirmFrame.Position = UDim2.new(0.5, -200, -0.5, -150)
    confirmFrame.Rotation = -10
    confirmFrame.Parent = screenGui

    -- Change text to "I'm sorry"
    confirmFrame:FindFirstChild("TextLabel").Text = "I'm sorry"

    -- Remove button
    for _, child in ipairs(confirmFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end

    -- Animate
    TweenService:Create(confirmFrame, tweenInfo, {Position = UDim2.new(0.5, -200, 0.3, 0), Rotation = 0}):Play()

    wait(2)
    confirmFrame:Destroy()
end)
